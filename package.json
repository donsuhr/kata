  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production npm-run-all --serial clean build:html build:workspaces && node ./scripts/build--copy-workspace-dist.mjs",
    "build:workspaces": "npm run build --workspaces",
    "build:html": "eleventy",
    "clean": "rm -rf ./dist",
    "lint": "npm-run-all --serial --continue-on-error lint:*",
    "lint:workspace": "npm run lint --workspaces",
    "lint:scripts": "eslint . --ext .js,.jsx,.ts,.tsx,.cjs",
    "lint:scripts:fix": "prettier . --write && npm run lint:scripts -- --fix",
    "lint:styles": "stylelint \"./src/**/*.{css,scss,sass}\" --cache ",
    "lint:types": "tsc  --noEmit",
    "start": "npm run clean && eleventy --serve"
  },
  "author": "Don Suhr <kata@donsuhr.com> (http://donsuhr.com/)",
  "license": "ISC",
  "workspaces": [
    "src/advent_2021/*",
    "src/devchallenges.io/*"
  ],
