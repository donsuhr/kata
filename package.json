{
  "name": "kata",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm-run-all --serial clean copy:images && NODE_ENV=production npm-run-all --parallel build:*",
    "build:html": "eleventy --input=./src",
    "build:scripts": "babel src --out-dir dist/kata --extensions .ts",
    "build:styles": "npm run styles -- --style=compressed",
    "clean": "rm -rf ./dist && rm -rf .tmp",
    "copy:images": "copyfiles --up 1 --verbose src/**/*.{png,jpg,webp,woff,woff2,svg,json} dist/kata",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint . --ext .js,.jsx,.ts,.tsx && tsc --noEmit",
    "lint:styles": "stylelint \"./src/**/*.{css,scss,sass}\" --cache ",
    "lint:types": "tsc  --noEmit",
    "scripts:watch": "babel src --out-dir dist/kata --extensions .ts --watch",
    "serve": "eleventy --serve --input=./src",
    "start": "npm run clean && npm-run-all --serial clean copy:images && npm run styles && npm-run-all --parallel serve styles:watch scripts:watch",
    "styles": "node-sass src -o .tmp --source-map true && postcss .tmp/**/*.css --base .tmp --dir dist/kata --verbose",
    "styles:watch": "concurrently \"sass src:.tmp --watch\" \"postcss .tmp/**/*.css --verbose --base .tmp --dir dist/kata --watch\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-minifier-terser": "^7.2.0",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.2",
    "stylelint-config-clean-order": "^6.1.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-declaration-strict-value": "^1.10.6",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.5.4"
  }
}
