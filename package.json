{
  "name": "kata",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all --serial clean copy:images && npm-run-all --parallel serve styles:watch",
    "serve": "eleventy --serve --input=./src",
    "build:html": "eleventy --input=./src",
    "build:styles": "npm run styles -- --style=compressed",
    "styles": "sass src:_site",
    "styles:watch": "sass src:_site --watch",
    "lint:styles": "stylelint \"./src/**/*.{css,scss,sass}\" --cache ",
    "copy:images": "copyfiles --up 1 --verbose src/**/*.{png,jpg} _site",
    "clean": "rm -rf ./_site",
    "build": "npm-run-all --serial clean copy:images && NODE_ENV=production npm-run-all --parallel build:*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "copyfiles": "^2.4.1",
    "html-minifier-terser": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "stylelint": "^14.16.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-declaration-strict-value": "^1.9.1",
    "stylelint-order": "^5.0.0"
  }
}
